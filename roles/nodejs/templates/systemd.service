[Unit]
Description = {{COMPONENT}} Service
After=network.target

[Service]
User="{{USER}}"
ExecStart=/bin/node /home/{{USER}}/{{COMPONENT}}/index.js
SyslogIdentifier="{{COMPONENT}}"
StandardOutput=/var/log/{{COMPONENT}}/node_log.log
StandardError=/var/log/{{COMPONENT}}/node_error_log.log

[Install]
WantedBy=multi-user.target